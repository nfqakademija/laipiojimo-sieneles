{% extends "::base.html.twig" %}

{% block body %}

    {% if orders %}
        <table>
            <thead>
            <tr>
                <td>{{ 'list.no'|trans }}.</td>
                <td>{{ 'form.label_name'|trans }}</td>
                <td>{{ 'form.label_city'|trans }}</td>
                <td>{{ 'list.area'|trans }}</td>
            </tr>
            </thead>

            <tbody>
                {% for order in orders %}
                   <tr
                        {% if order.seen == false %}
                             style="background-color: red;"
                        {% endif %}
                    >
                        <td>{{ order.id }}</td>
                        <td> <a class="black" href="{{ path('admin.details', {'id': order.id}) }}">{{ order.clientName }}</a></td>
                        <td>{{ order.clientCity }}</td>
                        <td>{{ (order.width * order.height)|round(1, 'common') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No orders.</p>
    {% endif %}

{% endblock %}