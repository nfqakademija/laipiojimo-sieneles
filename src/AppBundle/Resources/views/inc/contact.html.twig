<section id="contact">
    <div class="inner">
        <section>
            <form method="post" action="#">
                <div class="field half first">
                    <label for="name">{{ 'form.label_name'|trans }}</label>
                    <input type="text" name="name" id="name" />
                </div>
                <div class="field half">
                    <label for="email">{{ 'form.label_email'|trans }}</label>
                    <input type="text" name="email" id="email" />
                </div>
                <div class="field">
                    <label for="message">{{ ''|trans }}</label>
                    <textarea name="message" id="message" rows="6"></textarea>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="{{ 'form.label_send'|trans }}" class="special" /></li>
                    <li><input type="reset" value="{{ 'form.label_clear'|trans }}" /></li>
                </ul>
            </form>
        </section>
        <section class="split">
            <section>
                <div class="contact-method">
                    <span class="icon alt fa-envelope"></span>
                    <h3>{{ 'form.label_name'|trans }}</h3>
                    <a href="#">matas@laipiojimocentras.lt</a>
                </div>
            </section>
            <section>
                <div class="contact-method">
                    <span class="icon alt fa-phone"></span>
                    <h3>{{ 'form.label_phone'|trans }}</h3>
                    <span>+370 611 11111</span>
                </div>
            </section>
            <section>
                <div class="contact-method">
                    <span class="icon alt fa-home"></span>
                    <h3>{{ 'form.label_adress'|trans }}</h3>
                    <span>V. Krėvės pr. 49<br />
										PC "Rėda", Kaunas<br />
										Lietuva</span>
                </div>
            </section>
        </section>
    </div>
</section>